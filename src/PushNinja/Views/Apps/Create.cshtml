@model PushNinja.Models.App

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Apps", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>App</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AppleCertificate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="AppleCertificate" />
                @Html.ValidationMessageFor(model => model.AppleCertificate)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AppleCertificatePassword, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AppleCertificatePassword)
                @Html.ValidationMessageFor(model => model.AppleCertificatePassword)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GcmAuthorizationToken, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GcmAuthorizationToken)
                @Html.ValidationMessageFor(model => model.GcmAuthorizationToken)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
